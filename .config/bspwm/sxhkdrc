#Config file for simple X hotkey daemon

#"Pausing" sxhkd
super+Return
	killall sxhkd && sxhkd -c ~/.config/bspwm/hkpause& notify-send.sh "Paused simple X hotkey daemon" -i ~/Pictures/Important/icons/other/stop.png -t 1500 --replace=420 -u critical&

#Apps and programs
control+alt+w  
	brave
control+alt+t  
	kitty
#control+alt+g  
#	lutris
control+alt+f 
	thunar 
super+shift+c
	~/.bscripts/wc.sh

#rofi things
#Launch apps
super+shift+e 
	~/.bscripts/rofi.sh drun
	
#Window switcher
alt+Tab
	~/.bscripts/rofi.sh window

#Configuration launcher
super+shift+s
	~/.bscripts/rofi.sh config

#Resolution switcher
#control+shift+p
	#bash -c "~/.bscripts/rofi.sh resolution" 

#Screenshot
Print  
	~/.bscripts/ss.sh
#Delayed screenshot
super+Print
    sleep 3 && ~/.bscripts/ss.sh

#Color picker
control+alt+c
	colorpicker --short --one-shot | xclip -selection "clipboard"

#Suspend the pc
super+o
	~/.bscripts/lock.sh

